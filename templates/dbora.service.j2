[Unit]
Description=The Oracle Database Service
After=syslog.target network.target

[Service]
# systemd ignores PAM limits, so set any necessary limits in the service.
# Not really a bug, but a feature.
# https://bugzilla.redhat.com/show_bug.cgi?id=754285
LimitMEMLOCK=infinity
LimitNOFILE=65535

Type=simple
RemainAfterExit=yes
User={{ oracle_user }}
Group={{ oracle_group }}
ExecStart={{ oracle_home_db_install }}/bin/{{ item.0.oracle_db_name }}_startup.sh >> {{ oracle_home_db_install }}/log/{{ item.0.oracle_db_name }}_startup_shutdown.log 2>&1 &
ExecStop={{ oracle_home_db_install }}/bin/{{ item.0.oracle_db_name }}_shutdown.sh >> {{ oracle_home_db_install }}/log/{{ item.0.oracle_db_name }}_startup_shutdown.log 2>&1

[Install]
WantedBy=multi-user.target
